
<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <% if @book.errors.any? %>
    <div class="error_explanation">
      <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
           <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', books: @books, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |f| %>
            <tr>
              <td>
                <%= link_to attachment_image_tag(f.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image1.jpg"), user_path(f.user.id) %>
              </td>
              <td>
                <%= link_to f.title, book_path(f.id) %>
              </td>
              <td>
                <%= f.body %>
              <td>
                <% if f.favorited_by?(current_user) %>
					        <%= link_to book_favorites_path(f), method: :delete do %>
							    <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
							     <%= f.favorites.count %>
							    <% end %>
						    <% else %>
						      <%= link_to book_favorites_path(f), method: :post do %>
							    <i class="fa fa-heart" aria-hidden="true" style="color: blue;"></i>
							     <%= f.favorites.count %>
							    <% end %>
						    <% end %>
						  </td>
						  <td>コメント数: <%= f.book_comments.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>